#!/usr/bin/env python

# Palimpsest Editor Extensions SCsub
# Build configuration for custom CRPG editor UI components

Import("env")

# Create a separate environment for Palimpsest editor extensions
palimpsest_env = env.Clone()

# Add include paths for editor and core
palimpsest_env.Append(CPPPATH=["#editor", "#core", "#scene"])

# Source files for Palimpsest editor extensions
palimpsest_sources = [
    "palimpsest_editor_node.cpp",
    "palimpsest_workspace_manager.cpp", 
    "palimpsest_theme_manager.cpp",
    "palimpsest_node_creator.cpp",
]

# Build the Palimpsest editor extension library
palimpsest_lib = palimpsest_env.StaticLibrary("palimpsest_editor", palimpsest_sources)

# Add the library to the editor environment
env.Prepend(LIBS=[palimpsest_lib])

# Register the Palimpsest editor components with the build system
env.Append(CPPDEFINES=["PALIMPSEST_EDITOR_ENABLED"])

print("Building Palimpsest CRPG Editor Extensions...")